<UserControl x:Class="MainFunctions.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Margin="0,0,0,15">
            <TextBlock Text="Reports"
                       FontSize="26"
                       FontWeight="Bold"/>

            <!-- keep header clean; actions live in filter bar -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- FILTER BAR -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="10"
                Margin="0,0,0,15">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" /> <!-- Select label -->
                    <ColumnDefinition Width="200" /> <!-- ReportType -->
                    <ColumnDefinition Width="Auto" /> <!-- From label -->
                    <ColumnDefinition Width="160" /> <!-- FromDate -->
                    <ColumnDefinition Width="Auto" /> <!-- To label -->
                    <ColumnDefinition Width="160" /> <!-- ToDate -->
                    <ColumnDefinition Width="Auto" /> <!-- Status label -->
                    <ColumnDefinition Width="140" /> <!-- Status -->
                    <ColumnDefinition Width="*" /> <!-- spacer -->
                    <ColumnDefinition Width="Auto" /> <!-- Actions -->
                </Grid.ColumnDefinitions>

                <!-- SELECT LABEL + REPORT TYPE -->
                <TextBlock Grid.Column="0" Text="Select" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="ReportType" Grid.Column="1" Height="30" VerticalAlignment="Center" Margin="0,0,12,0">
                    <ComboBoxItem Content="Financial Report"/>
                    <ComboBoxItem Content="Project Report"/>
                    <ComboBoxItem Content="Worker Report"/>
                    <ComboBoxItem Content="Material Usage"/>
                </ComboBox>

                <!-- FROM LABEL + DATE PICKER -->
                <TextBlock Grid.Column="2" Text="From" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <DatePicker x:Name="FromDate" Grid.Column="3" Height="30" VerticalAlignment="Center" Margin="0,0,12,0"/>

                <!-- TO LABEL + DATE PICKER -->
                <TextBlock Grid.Column="4" Text="To" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <DatePicker x:Name="ToDate" Grid.Column="5" Height="30" VerticalAlignment="Center" Margin="0,0,12,0"/>

                <!-- STATUS LABEL + COMBO -->
                <TextBlock Grid.Column="6" Text="Status" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox Grid.Column="7" Height="30" Width="110" VerticalAlignment="Center" Margin="0,0,12,0">
                    <ComboBoxItem Content="All Status"/>
                    <ComboBoxItem Content="Completed"/>
                    <ComboBoxItem Content="Ongoing"/>
                </ComboBox>

                <!-- Right-side actions placeholder (kept minimal) -->
                <StackPanel Grid.Column="9" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Button Content="Apply" Width="100" Height="32"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- SUMMARY CARDS -->
            <UniformGrid Rows="1"
                         Columns="3"
                         Margin="0,0,0,15">

                <Border Background="White"
                        CornerRadius="10"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Total Revenue"
                                   Foreground="Gray"/>
                        <TextBlock x:Name="RevenueValue"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="White"
                        CornerRadius="10"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Total Expenses"
                                   Foreground="Gray"/>
                        <TextBlock x:Name="ExpenseValue"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="White"
                        CornerRadius="10"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Active Projects"
                                   Foreground="Gray"/>
                        <TextBlock x:Name="ActiveProjectsValue"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

            </UniformGrid>

            <!-- REPORT TABLE -->
            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="10"
                    Padding="10">
                <!-- Use Grid to position DataGrid on left and export buttons on right under the label -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Label in row 0 col 0 -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Report Details"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <!-- Export buttons stacked on the right, under the label -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button Content="Export PDF" Width="160" Height="34" Margin="0,0,0,8"/>
                        <Button Content="Export Excel" Width="160" Height="34"/>
                    </StackPanel>

                    <!-- Data grid occupies left side, row 1 col 0 -->
                    <DataGrid x:Name="ReportsGrid"
                              Grid.Row="1" Grid.Column="0"
                              AutoGenerateColumns="True"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
