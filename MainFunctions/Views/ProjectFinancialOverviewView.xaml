<UserControl x:Class="MainFunctions.Views.ProjectFinancialOverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Project" VerticalAlignment="Center"/>
            <ComboBox x:Name="ProjectCombo" Width="240" Margin="8,0,0,0"/>
            <Button x:Name="RefreshButton" Content="Refresh" Margin="12,0,0,0"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <UniformGrid Rows="2" Columns="3" Margin="0,8,0,8">
                <StackPanel>
                    <TextBlock Text="Total Invoiced (Receivable)"/>
                    <TextBlock x:Name="TotalReceivableText" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Total Received"/>
                    <TextBlock x:Name="TotalReceivedText" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Outstanding to Receive"/>
                    <TextBlock x:Name="OutstandingReceivableText" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Total Payable"/>
                    <TextBlock x:Name="TotalPayableText" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Total Paid"/>
                    <TextBlock x:Name="TotalPaidText" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Outstanding to Pay"/>
                    <TextBlock x:Name="OutstandingPayableText" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </UniformGrid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="ObligationsGrid" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                        <DataGridTextColumn Header="Entity" Binding="{Binding EntityName}"/>
                        <DataGridTextColumn Header="Period" Binding="{Binding Period}"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalLines, StringFormat=N2}"/>
                        <DataGridTextColumn Header="Applied" Binding="{Binding TotalApplied, StringFormat=N2}"/>
                        <DataGridTextColumn Header="Balance" Binding="{Binding Balance, StringFormat=N2}"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                        <DataGridTextColumn Header="Due" Binding="{Binding DueDate, StringFormat=yyyy-MM-dd}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <!-- Settlement entry with labels -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <StackPanel Width="160" Margin="0,0,8,0">
                        <TextBlock Text="Settlement Date" FontWeight="SemiBold"/>
                        <DatePicker x:Name="SettlementDatePicker"/>
                    </StackPanel>
                    <StackPanel Width="140" Margin="0,0,8,0">
                        <TextBlock Text="Amount (LKR)" FontWeight="SemiBold"/>
                        <TextBox x:Name="SettlementAmountBox" ToolTip="Enter amount in LKR"/>
                    </StackPanel>
                    <StackPanel Width="140" Margin="0,0,8,0">
                        <TextBlock Text="Method" FontWeight="SemiBold"/>
                        <ComboBox x:Name="SettlementMethodCombo">
                            <ComboBoxItem Content="Cash"/>
                            <ComboBoxItem Content="Bank"/>
                            <ComboBoxItem Content="Cheque"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Width="200" Margin="0,0,8,0">
                        <TextBlock Text="Payer/Payee (optional)" FontWeight="SemiBold"/>
                        <TextBox x:Name="SettlementPayerBox" ToolTip="Optional payer or payee name"/>
                    </StackPanel>
                    <StackPanel Width="160" Margin="0,0,8,0">
                        <TextBlock Text="Reference" FontWeight="SemiBold"/>
                        <TextBox x:Name="SettlementReferenceBox" ToolTip="e.g., receipt no., bank slip"/>
                    </StackPanel>
                    <StackPanel Width="220" Margin="0,0,8,0">
                        <TextBlock Text="Notes" FontWeight="SemiBold"/>
                        <TextBox x:Name="SettlementNotesBox" ToolTip="Optional notes"/>
                    </StackPanel>
                    <Button x:Name="AddSettlementButton" Content="Add Settlement" Margin="8,18,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>