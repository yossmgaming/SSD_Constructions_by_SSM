<UserControl x:Class="MainFunctions.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="auto" Width="auto">

    <!-- STYLES -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- LAYOUT -->
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Margin="5,5,0,15">
            <TextBlock Text="Dashboard"
                       FontSize="22"
                       FontWeight="Bold" FontFamily="Lucida Fax"/>

            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- FILTER BAR (optional for dashboard) -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Margin="0,0,0,10">
            <TextBox Width="220"
                     ToolTip="Search..."/>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT CARD -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Overview"
                               Style="{StaticResource SectionTitle}" FontFamily="Lucida Bright"/>
                    <ListView/>
                </StackPanel>
            </Border>

            <!-- RIGHT CARD -->
            <Border Grid.Column="1"
                    Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Recent Activity"
                               Style="{StaticResource SectionTitle}" FontFamily="Lucida Bright"/>
                </StackPanel>
            </Border>
        </Grid>
        <Button Content="Refresh" Padding="5,0,5,0" Margin="238,46,236,8" Grid.RowSpan="2" Click="Button_Click" FontFamily="Lucida Bright"/>
    </Grid>
</UserControl>
