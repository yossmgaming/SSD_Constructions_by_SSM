<UserControl x:Class="MainFunctions.Views.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainFunctions.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F5F5" Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Margin="0,0,0,15">
            <TextBlock Text="Projects"
                   FontSize="26"
                   FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- FILTERS -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchProjects"
                 Height="32"
                 Margin="0,0,10,0"
                 ToolTip="Search projects..." />

            <ComboBox x:Name="StatusFilter"
                  Grid.Column="1"
                  Margin="0,0,10,0"
                  SelectedIndex="0"
                  SelectionChanged="StatusFilter_SelectionChanged">
                <ComboBoxItem Content="All"/>
                <ComboBoxItem Content="Ongoing"/>
                <ComboBoxItem Content="Completed"/>
                <ComboBoxItem Content="On Hold"/>
            </ComboBox>

        </Grid>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- PROJECT LIST -->
            <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Project List" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <DataGrid x:Name="ProjectsGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Client" Binding="{Binding Client}" Width="*"/>
                            <DataGridTextColumn Header="Budget" Binding="{Binding Budget, StringFormat=LKR {0:N2}}" Width="120"/>
                            <DataGridTextColumn Header="Start" Binding="{Binding StartDate}" Width="*"/>
                            <DataGridTextColumn Header="End" Binding="{Binding EndDate}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                        </DataGrid.Columns>

                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- DETAILS PANEL -->
            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <TextBlock Text="Project Details"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,10"/>

                        <!-- NAME -->
                        <TextBlock Text="Name"/>
                        <TextBox x:Name="ProjName" Margin="0,0,0,10"/>

                        <!-- CLIENT -->
                        <TextBlock Text="Client"/>
                        <TextBox x:Name="ProjClient" Margin="0,0,0,10"/>

                        <!-- BUDGET -->
                        <TextBlock Text="Budget (LKR)"/>
                        <TextBox x:Name="ProjBudget" Margin="0,0,0,10"/>

                        <!-- START / END DATES -->
                        <TextBlock Text="Start Date"/>
                        <DatePicker x:Name="ProjStart" Margin="0,0,0,10"/>

                        <TextBlock Text="End Date"/>
                        <DatePicker x:Name="ProjEnd" Margin="0,0,0,10"/>

                        <!-- STATUS -->
                        <TextBlock Text="Status"/>
                        <ComboBox x:Name="ProjStatus" Margin="0,0,0,10">
                            <ComboBoxItem Content="Ongoing"/>
                            <ComboBoxItem Content="Completed"/>
                            <ComboBoxItem Content="On Hold"/>
                            <ComboBoxItem Content="Cancelled"/>
                        </ComboBox>

                        <!-- DESCRIPTION -->
                        <TextBlock Text="Description"/>
                        <TextBox x:Name="ProjDescription"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Height="80"
                     Margin="0,0,0,15"/>

                        <!-- ACTION BUTTONS -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- ACTION BUTTONS -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
            Content="Save"
            Height="34"
                                        Width="75"
            Margin="0,0,8,0"
            Click="SaveProject_Click"/>

                                <Button Grid.Column="1"
            Content="Delete"
            Height="34"
                                        Width="75"
            Margin="8,0,8,0"
            Click="DeleteProject_Click"/>

                                <Button Grid.Column="2"
            Content="Clear"
            Height="34"
                                        Width="75"
            Margin="8,0,0,0"
            Click="ClearProjectForm_Click"/>
                            </Grid>

                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>
    </Grid>

</UserControl>
