<UserControl x:Class="MainFunctions.Views.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainFunctions.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F5F5" Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <DockPanel Margin="0,0,0,15">
            <TextBlock Text="Projects"
                   FontSize="26"
                   FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- FILTERS -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchProjects"
                 Height="32"
                 Margin="0,0,10,0"
                 ToolTip="Search projects..." />

            <ComboBox x:Name="StatusFilter"
                  Grid.Column="1"
                  Margin="0,0,10,0"
                  SelectedIndex="0">
                <ComboBoxItem Content="All"/>
                <ComboBoxItem Content="Ongoing"/>
                <ComboBoxItem Content="Completed"/>
                <ComboBoxItem Content="On Hold"/>
            </ComboBox>

            <Button Grid.Column="2" Content="Refresh" Width="90"/>
        </Grid>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- PROJECT LIST -->
            <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Project List" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <DataGrid x:Name="ProjectsGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Client" Binding="{Binding Client}" Width="*"/>
                            <DataGridTextColumn Header="Start" Binding="{Binding StartDate}" Width="*"/>
                            <DataGridTextColumn Header="End" Binding="{Binding EndDate}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                        </DataGrid.Columns>

                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- DETAILS PANEL -->
            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Project Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <TextBlock Text="Name:" FontWeight="SemiBold"/>
                    <TextBlock x:Name="DetailName" Margin="0,0,0,10"/>

                    <TextBlock Text="Client:" FontWeight="SemiBold"/>
                    <TextBlock x:Name="DetailClient" Margin="0,0,0,10"/>

                    <TextBlock Text="Budget (LKR):" FontWeight="SemiBold"/>
                    <TextBlock x:Name="DetailBudget" Margin="0,0,0,10"/>

                    <TextBlock Text="Description:" FontWeight="SemiBold"/>
                    <TextBlock x:Name="DetailDescription" TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Edit" Width="80" Margin="0,0,10,0"/>
                        <Button Content="Close" Width="80"/>
                        <Button Content=" Add Project" Width="100" Click="AddProject_Click" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>

</UserControl>
