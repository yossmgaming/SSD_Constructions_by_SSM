<UserControl x:Class="MainFunctions.Views.ClientInvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Project" VerticalAlignment="Center"/>
            <ComboBox x:Name="ProjectCombo" Width="220" Margin="8,0,0,0"/>
            <TextBlock Text="Client" VerticalAlignment="Center" Margin="16,0,0,0"/>
            <TextBlock x:Name="ClientText" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,0,0"/>
            <TextBlock Text="Due Date" VerticalAlignment="Center" Margin="16,0,0,0"/>
            <DatePicker x:Name="DueDatePicker" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Input row for invoice lines -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,8">
            <TextBlock Text="Description" VerticalAlignment="Center"/>
            <TextBox x:Name="LineDescriptionBox" Width="300" Margin="8,0,0,0"/>
            <TextBlock Text="Qty" VerticalAlignment="Center" Margin="12,0,0,0"/>
            <TextBox x:Name="LineQtyBox" Width="80" Margin="8,0,0,0"/>
            <TextBlock Text="UnitRate" VerticalAlignment="Center" Margin="12,0,0,0"/>
            <TextBox x:Name="LineRateBox" Width="100" Margin="8,0,0,0"/>
            <Button x:Name="AddLineButton" Content="Add Line" Margin="12,0,0,0"/>
            <Button x:Name="RemoveLineButton" Content="Remove Selected" Margin="8,0,0,0"/>
        </StackPanel>

        <DataGrid x:Name="LinesGrid" Grid.Row="2" AutoGenerateColumns="False" Margin="0,8,0,8" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
                <DataGridTextColumn Header="Unit Rate" Binding="{Binding UnitRate}" />
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=N2}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Total:" VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalAmountText" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,0,0"/>
            <Button x:Name="CreateHeaderButton" Content="Create Invoice" Margin="12,0,0,0" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</UserControl>