<UserControl x:Class="MainFunctions.Views.AdvancesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <TextBlock Text="Advances" FontSize="22" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button x:Name="RefreshButton" Content="Refresh" Margin="8,0,0,0"/>
                <Button x:Name="ApplyAdvanceButton" Content="Apply Advance" Margin="8,0,0,0"/>
            </StackPanel>
        </DockPanel>
        <DataGrid Grid.Row="1" x:Name="AdvancesGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="120"/>
                <DataGridTextColumn Header="From Entity" Binding="{Binding FromEntityLabel}" Width="160"/>
                <DataGridTextColumn Header="Direction" Binding="{Binding Direction}" Width="100"/>
                <DataGridTextColumn Header="Original Amount" Binding="{Binding OriginalAmount, StringFormat=N2}" Width="140"/>
                <DataGridTextColumn Header="Applied Amount" Binding="{Binding AppliedAmount, StringFormat=N2}" Width="140"/>
                <DataGridTextColumn Header="Remaining" Binding="{Binding Remaining, StringFormat=N2}" Width="140"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>